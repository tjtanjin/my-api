{
    "/shields/api/v1/get/{key}": {
        "get": {
            "tags": ["Shields Module"],
            "summary": "Provides a JSON output for custom shields.",
            "description": "Provides a JSON output for generating custom shields at https://shields.io/endpoint",
            "parameters": [
                {
                    "in": "path",
                    "name": "key",
                    "required": true,
                    "description": "Key to identify the badge specified in the config."
                }
            ],
            "responses": {
                "200": {
                    "description": "Success",
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": ["schemaVersion", "label", "message"],
                                "description": "Accepts all fields listed here: https://shields.io/endpoint.",
                                "properties": {
                                    "schemaVersion": {
                                        "description": "Always 1 as specified by shields.io",
                                        "type": "number",
                                        "example": 1
                                    },
                                    "label": {
                                        "description": "Text to show on the left side of the badge.",
                                        "type": "string",
                                        "example": "Files Converted"
                                    },
                                    "message": {
                                        "description": "Text to show on the right side of the badge.",
                                        "type": "string",
                                        "example": 12
                                    }
                                }
                            }
                        }
                    }
                },
                "404": { "description": "Badge not found" },
                "500": { "description": "Internal server error" }
            }
        }
    }
}